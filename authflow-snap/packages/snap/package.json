{
  "name": "snap",
  "version": "0.1.1",
  "description": "AuthFlow: A credentials management snap written in Typescript.",
  "repository": {
    "type": "git",
    "url": "https://github.com/tuum-tech/authflow-snap.git"
  },
  "license": "(MIT-0 OR Apache-2.0)",
  "main": "./dist/bundle.js",
  "files": [
    "dist/",
    "snap.manifest.json"
  ],
  "scripts": {
    "allow-scripts": "yarn workspace root allow-scripts",
    "build": "mm-snap build",
    "build:clean": "yarn clean && yarn build",
    "clean": "rimraf dist",
    "lint": "yarn lint:eslint && yarn lint:misc --check",
    "lint:eslint": "eslint . --cache --ext js,ts",
    "lint:fix": "yarn lint:eslint --fix && yarn lint:misc --write",
    "lint:misc": "prettier '**/*.json' '**/*.md' '!CHANGELOG.md' --ignore-path .gitignore",
    "prepublishOnly": "mm-snap manifest",
    "serve": "mm-snap serve",
    "start": "mm-snap watch",
    "test": "jest"
  },
  "dependencies": {
    "@hashgraph/sdk": "^2.48.1",
    "@metamask/keyring-api": "^8.0.1",
    "@metamask/providers": "^17.1.1",
    "@metamask/snaps-sdk": "^4.0.0",
    "@metamask/snaps-types": "^3.1.0",
    "@metamask/snaps-ui": "^3.1.0",
    "@veramo/core": "^6.0.0",
    "@veramo/credential-eip712": "^6.0.0",
    "@veramo/credential-w3c": "^5.1.2",
    "@veramo/did-jwt": "^6.0.0",
    "@veramo/did-manager": "^6.0.0",
    "@veramo/did-provider-ethr": "^6.0.0",
    "@veramo/did-provider-pkh": "^6.0.0",
    "@veramo/did-resolver": "^6.0.0",
    "@veramo/key-manager": "^6.0.0",
    "@veramo/kms-local": "^6.0.0",
    "@veramo/message-handler": "^6.0.0",
    "@veramo/selective-disclosure": "^6.0.0",
    "bignumber.js": "^9.1.2",
    "buffer": "^6.0.3",
    "did-jwt-vc": "^4.0.4",
    "did-resolver": "^4.1.0",
    "ethers": "^6.13.1",
    "ethr-did-resolver": "^10.1.9",
    "jsonld": "^8.3.2",
    "jsonpath": "^1.1.1",
    "lodash": "^4.17.21",
    "lodash.clonedeep": "^4.5.0",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.5.0",
    "@metamask/auto-changelog": "^3.4.4",
    "@metamask/eslint-config": "^12.2.0",
    "@metamask/eslint-config-jest": "^12.1.0",
    "@metamask/eslint-config-nodejs": "^12.1.0",
    "@metamask/eslint-config-typescript": "^12.1.0",
    "@metamask/snaps-cli": "^6.1.0",
    "@metamask/snaps-jest": "^7.0.0",
    "@types/jsonpath": "^0.2.4",
    "@types/lodash.clonedeep": "^4.5.9",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^5.42.1",
    "@typescript-eslint/parser": "^5.42.1",
    "@veramo/core-types": "^6.0.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "~2.26.0",
    "eslint-plugin-jest": "^27.1.5",
    "eslint-plugin-jsdoc": "^41.1.2",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.5.0",
    "prettier": "^2.7.1",
    "prettier-plugin-packagejson": "^2.2.11",
